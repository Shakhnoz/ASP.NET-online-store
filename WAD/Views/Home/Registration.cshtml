    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="@WAD.Resources.General.Registration" class="btn btn-success" />
        </div>
    </div>

    <div class="col-md-offset-2 col-md-10">
        @Html.ActionLink(@WAD.Resources.General.Back, "Login", null, new { @class = "btn btn-primary" })
    </div>
