@model DAL.Entities.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Product</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @WAD.Resources.Product.Category
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.Title)
        </dd>

        <dt>
            @WAD.Resources.Product.User
        </dt>

        <dd>
            @Html.DisplayFor(model => model.User.Address)
        </dd>

        <dt>
            @WAD.Resources.Product.Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @WAD.Resources.Product.Price
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            @{string imagepath = Model.Photo;

                <img src="@Url.Content(imagepath)" alt="Image" style="width: 100px;height: 150px; max-width:100%; height:auto;" />
            }
        </dt>


    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="@WAD.Resources.General.Delete" class="btn btn-default" /> |
            @Html.ActionLink(WAD.Resources.General.Back, "Products", new { @class="btn btn-primary"})
        </div>
    }
</div>
